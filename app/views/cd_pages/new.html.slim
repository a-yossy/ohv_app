.content
  .row
    .col-md-6.col-md-offset-3
      = form_with model: @cd_form_object, url: cd_pages_path do |f|
        = render 'shared/error_messages', object: f.object

        = f.label :format
        = f.text_field :format, class: 'form-control'

        = f.label :picture
        = f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'

        = f.label :title
        = f.text_field :title, class: 'form-control'

        = f.label :release_date
        = f.date_select :release_date, class: 'form-control'

        = f.label :price
        = f.number_field :price, class: 'form-control'

        = f.label :url
        = f.text_field :url, class: 'form-control'

        = f.fields_for :songs do |song|

          = song.label :name
          = song.text_field :name, class: 'form-control'

          = song.label :track_number
          = song.number_field :track_number, class: 'form-control'

        = f.submit "作成する", class: "btn btn-primary"
